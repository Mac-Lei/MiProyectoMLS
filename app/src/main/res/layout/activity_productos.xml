<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ListView
        android:id="@+id/listViewProductos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="10dp" />

    <TextView
        android:id="@+id/textSeleccionProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Producto seleccionado: Ninguno"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editCantidadSeleccionada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Ingrese la cantidad"
        android:inputType="number" />

    <TextView
        android:id="@+id/textTotalCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Total: $0"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Botón para agregar productos -->
    <Button
        android:id="@+id/btnAgregarProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Producto"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white" />

    <!-- Botón para confirmar la compra -->
    <Button
        android:id="@+id/btnConfirmarCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Confirmar compra"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout>
